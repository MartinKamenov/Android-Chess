<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SuccessButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#fff</item>
        <item name="colorButtonNormal">#5BB85D</item>
    </style>
    <style name="InfoButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#fff</item>
        <item name="colorButtonNormal">#5BC0DE</item>
    </style>
    <style name="DangerButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#fff</item>
        <item name="colorButtonNormal">#DB524B</item>
    </style>

</resources>
